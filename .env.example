# For authentication required MongoDB
# MONGODB_URI=mongodb://username:password@localhost:27017/aditya_hospital

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration
JWT_EXPIRES_IN=24h

# Password Salt Rounds
BCRYPT_SALT_ROUNDS=12

# ===========================================
# API CONFIGURATION
# ===========================================

# API Base URL for frontend
VITE_API_URL=http://adityahospitalnagaon.com/api

# Frontend URL (for CORS)
FRONTEND_URL=http://adityahospitalnagaon.com

# Domain for production
DOMAIN=adityahospitalnagaon.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================

# Maximum file size (in bytes)
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=uploads

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================

# Email service provider
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password

# ===========================================
# RATE LIMITING CONFIGURATION
# ===========================================

# Rate limit window (in milliseconds)
RATE_LIMIT_WINDOW=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING CONFIGURATION
# ===========================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file path
LOG_FILE=logs/app.log

# ===========================================
# PRODUCTION-SPECIFIC VARIABLES
# ===========================================

# Session Secret
SESSION_SECRET=your-session-secret-key

# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=https://adityahospitalnagaon.com,https://www.adityahospitalnagaon.com

# SSL Certificate paths (for HTTPS)
# SSL_CERT_PATH=/path/to/certificate.crt
# SSL_KEY_PATH=/path/to/private.key
